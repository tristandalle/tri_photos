{% extends 'base.html.twig' %}

 {% block body %}
     <section id="all-photos">
         <div class="container bg-dark">
             <h1>Salut <span>{{ app.user.username() }}</span> ! Vous avez {{ photos|length }} photo{% if photos|length > 1 %}s{% endif %} :</h1>

             {% for photo in photos %}
                 <div class="container-photo">
                     <a href="{{ path('image_one_photo', {'id' :photo.id}) }}">
                         <img src="{{ path('file_download', {'id' :photo.id}) }}" alt="" >
                     </a>
                     <div class="hover-photo">
                         <a href="{{ path('image_one_photo', {'id' :photo.id}) }}" class="link-photo"></a>
                         <a href="{{ path('image_remove_photo', {'id' :photo.id}) }}" class="link-erase-photo"><i class="far fa-trash-alt"></i></a>
                     </div>
                 </div>
             {% endfor %}

             <div class="buttons">
                 <a href="{{ path('home_connected') }}" class="btn btn-warning">Retour Ã  l'accueil</a>
                 <a class="btn btn-primary btn-lg" href="{{ path('album_all_albums') }}" role="button">Voir mes albums</a>
                 <a class="btn btn-success btn-lg" href="{{ path('image_add') }}" role="button">Ajouter une photo</a>
             </div>
         </div>
     </section>

 {% endblock %}