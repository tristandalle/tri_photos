<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Connexion admin</title>
    <link rel="stylesheet" href="{{ asset('build/js/app.css') }}">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
</head>
<body>
    <section id="login">
        <div class="container">
            <h3><i class="fas fa-lock"></i> admin</h3>
            <div class="container-form col-6">
                <form method="post">
                    <div class="form-group">
                        <input type="email" required name="_username" id="email" class="form-control" placeholder="Adresse email ..." value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <input type="password" required name="_password" id="password" class="form-control" placeholder="Mot de passe ...">
                    </div>
                    {% if error %}
                        <div class="alert alert-danger">Email ou mot de passe incorrect</div>
                    {% endif %}
                    <div class="form-group submit">
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </div>
                    <div class="form-group">
                        <a href="{{ path('home_welcome') }}" type="button" class="btn btn-warning">retour au site</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <script src="/build/runtime.js"></script>
    <script src="{{ asset('build/js/app.js') }}"></script>
</body>
</html>
