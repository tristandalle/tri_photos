{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <section id="admin">
        <div class="container">
            <h1><i class="fas fa-lock"></i> admin</h1>
            <hr>
            <div class="container-form col-lg-6">
                <form method="post">
                    <div class="form-group">
                        <label for="email">Adresse email admin</label>
                        <input type="email" required name="_username" id="email" class="form-control"
                               placeholder="Adresse email ..." value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe admin</label>
                        <input type="password" required name="_password" id="password" class="form-control"
                               placeholder="Mot de passe ...">
                    </div>
                    {% if error %}
                        <div class="alert alert-danger">Email ou mot de passe incorrect</div>
                    {% endif %}
                    <div class="form-group submit">
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
