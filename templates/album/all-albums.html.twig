{% extends 'base.html.twig' %}

{% block body %}
    <section id="all-albums">
        <div class="container bg-dark">
            <h1>Cher <span>{{ app.user.username() }}</span>, vous avez créé {{ albums|length }} album{% if albums|length > 1 %}s{% endif %} :</h1>
            <div class="card-container">
                {% if photosWithoutAlbum|length >= 1 %}
                <div class="card">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            {% for photoWithoutAlbum in photosWithoutAlbum %}
                            <div class="carousel-item">
                                <img src={{ ('uploads/images/' ~ photoWithoutAlbum.file) }} class="d-block" alt="...">
                            </div>
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Photos non triées ({{ photosWithoutAlbum|length }})</h5>
                        <p class="card-text">Cet album créé automatiquement contient toutes vos photos qui ne sont pas classées dans un album</p>
                        <a href="{{ path('image_all_photos') }}" class="btn btn-primary">Voir toutes mes photos</a>
                    </div>
                </div>
               {% endif %}
                {% for album in albums %}
                    <div class="card">
                        {% if album.photos|length == 0 %}
                            <div class="empty-album">
                                <a href="{{ path('image_all_photos') }}">
                                    <i class="fas fa-download"></i>
                                </a>
                            </div>
                        {% else %}
                            <div class="cover-album">
                                <a href="{{ path('image_all_photos') }}">
                                    <img src="{{ ('uploads/images/' ~ album.photos[0].file) }}" class="card-img-top" alt="...">
                                </a>
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ album.title }} ({{ album.photos|length }} photo{% if album.photos|length > 1 %}s{% endif %})</h5>
                            <p class="card-text">{{ album.description }}</p>
                            <div class="buttons">
                                <a href="{{ path('album_one_album', {'id' :album.id}) }}" class="btn btn-primary">Voir l'album</a>
                                <a href="" class="btn btn-danger" title="supprimer l'album (les photos ne seront pas supprimées)"><i class="far fa-trash-alt"></i></a>
                            </div>
                           
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="buttons">
                <a href="{{ path('home_connected') }}" class="btn btn-warning">Retour à l'accueil</a>
                <a href="{{ path('album_add') }}" class="btn btn-success">Créer un album</a>
            </div>
        </div>
    </section>
{% endblock %}
