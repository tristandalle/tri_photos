{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-5 mb-5 p-5 text-center text-light bg-dark">
        <div class="text-left">
            <a href="{{ path('home_welcome') }}" class="btn btn-warning">Retour</a>
        </div>
        <h1 class="m-5 text-success">Connexion</h1>
        <div class="container text-left col-6">
            <form action="{{ path('security_login') }}" method="post">
                <div class="form-group">
                    <input type="email" required name="_username" id="email" class="form-control" placeholder="Adresse email ..." value="{{ last_username }}">
                </div>
                <div class="form-group">
                    <input type="password" required name="_password" id="password" class="form-control" placeholder="Mot de passe ...">
                </div>
                <small><a href="">J'ai oubli√© mon mot de passe...</a></small>
                {% if error %}
                    <div class="alert alert-danger">Email ou mot de passe incorrect</div>
                {% endif %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success col-3 mb-5">Connexion !</button>
                </div>
            </form>

        </div>
    </div>

{% endblock %}